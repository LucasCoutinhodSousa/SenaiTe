package caixadedialogo;

import java.io.IOException;
import javax.swing.JOptionPane;

/**
 *
 * @author aluno
 */
public class CaixaDeDialogo {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args)  throws IOException{
        // TODO code application logic here
        String s = "";
        int frequencia = 0;
        
        String n1 = "";
        int nota1 = 0;
        
        String n2 = "";
        int nota2 = 0;
        int media = 0;
        
        n1 = JOptionPane.showInputDialog(null,"Entre com a nota 1: ");
        nota1 = (int) Float.parseFloat(n1);
        //JOptionPane.showMessageDialog(null,"Nota 1: " + n1);
        
        n2 = JOptionPane.showInputDialog(null,"Entre com a nota 2: ");
        nota1 = (int) Float.parseFloat(n2);
        //JOptionPane.showMessageDialog(null,"Nota 2: " + n2);
        
        s  = JOptionPane.showInputDialog(null, "Digite a frequencia do aluno");
        frequencia = (int) Float.parseFloat(s);
        
        media = nota1 + nota2 /2;
        //JOptionPane.showMessageDialog(null,"Media " + media);
        
        if(media >= 7 && frequencia >= 75){
        JOptionPane.showMessageDialog(null, "Aluno estar aprovado");
        }else{
        JOptionPane.showMessageDialog(null, "Aluno reprovado");
        }
        
        
      
    }
    
}
